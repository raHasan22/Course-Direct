{% schema %}
{
  "name": "CD Inspiration Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Looking for inspiration?"
    },
    {
      "type": "header",
      "content": "Card Settings"
    },
    {
      "type": "text",
      "id": "university_title",
      "label": "University Card Title",
      "default": "University courses"
    },
    {
      "type": "url",
      "id": "university_link",
      "label": "University Card Link"
    },
    {
      "type": "color",
      "id": "university_bg",
      "label": "University Card Background",
      "default": "#00a6e8"
    },
    {
      "type": "text",
      "id": "free_title",
      "label": "Free Courses Card Title",
      "default": "Free courses"
    },
    {
      "type": "url",
      "id": "free_link",
      "label": "Free Courses Card Link"
    },
    {
      "type": "color",
      "id": "free_bg",
      "label": "Free Courses Card Background",
      "default": "#21b967"
    },
    {
      "type": "text",
      "id": "discount_title",
      "label": "Discount Card Title",
      "default": "Discount courses"
    },
    {
      "type": "url",
      "id": "discount_link",
      "label": "Discount Card Link"
    },
    {
      "type": "color",
      "id": "discount_bg",
      "label": "Discount Card Background",
      "default": "#fadca2"
    },
    {
      "type": "text",
      "id": "career_title",
      "label": "Career Card Title",
      "default": "Career guides"
    },
    {
      "type": "url",
      "id": "career_link",
      "label": "Career Card Link"
    },
    {
      "type": "color",
      "id": "career_bg",
      "label": "Career Card Background",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 40,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 40,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 120
    }
  ],
  "presets": [
    {
      "name": "CD Inspiration Section",
      "category": "Content Sections"
    }
  ]
}
{% endschema %}

<!-- ================================
             Inspiration Section
             ================================ -->
             <section class="rh-inspiration-sec">
                <div class="rh-inspiration-container">
                  <div class="rh-inspiration-title">{{ section.settings.title }}</div>
                  <div class="rh-content-container">
                    <div class="rh-row">
                      <a href="{{ section.settings.university_link }}" class="rh-card rh-card-university">
                        <div class="rh-card-text">{{ section.settings.university_title }}</div>
                      </a>
                      <div class="rh-image">
                        <svg
