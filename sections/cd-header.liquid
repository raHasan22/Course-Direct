        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        gap: 8px;
        }

        .cd-header .cd-header__icons {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        gap: 8px;
        }

        .cd-header .cd-header__icon-btn {
        padding: 8px;
        background: none;
        border: none;
        cursor: pointer;
        color: black;
        -webkit-transition: color 0.2s;
